#!/bin/bash

progname=$(basename ${0})
directory="${HOME}/note"
file="${directory}/note.txt"

function usage()
{
    echo "${progname} "
}

function edit_file()
{
    vim ${file} +0
}

function show_file()
{
    cat ${file}
}

function main()
{
    action="${1:-"-e"}"
    case ${action} in
    -h|--help)
        usage
        ;;
    -s|--show|-c|--cat)
        show_file
        ;;
    -e|--edit)
        edit_file
        ;;
    esac
}

main "${@}"
exit

