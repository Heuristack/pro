#!/bin/bash

progname=$(basename ${0})
directory="${HOME}/pro"
file="${directory}/README.md"
datecommit=$(date +%a-%V-%y)
message="update automatic commit and push at ${datecommit}"

function usage()
{
    echo "${progname} "
}

function edit_file()
{
    vim ${file} +0
}

function show_file()
{
    cat ${file}
}

function push_file()
{
    cd ${directory}
    git status
    git add ${file}
    git commit -m "pro: ${message} [note]"
    git push
    cd
}

function main()
{
    case ${1} in
    -h|--help)
        usage
        ;;
    -p|--push)
        push_file
        ;;
    -s|--show|-c|--cat)
        show_file
        ;;
    -e|--edit|*)
        edit_file
        ;;
    esac
}

main "${@}"

