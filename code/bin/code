#!/bin/bash

date=$(date "+%Y%m%d%H%M")
progname=$(basename ${0})
dir="${HOME}/code"
file=$(ls -tr ${dir} | grep '.cpp' | tail -1)
newfile="${date}.cpp"
compiler="g++ -std=c++17"
programmingdir="${HOME}/repositories/programming"
readmefile="README.md"

function usage()
{
    echo "code [-h|--help]"
    echo "     [-n|--new]"
    echo "     [-e|--edit]"
    echo "     [-s|--show]"
    echo "     [-g|--compile]"
    echo "     [-r|--run]"
    echo "     [-l|--link]"
    echo "     [-c|--commit <message>]"
    echo "     [-p|--push]"
    echo "     [   --reset]"
    echo "     [   --recover]"
}

function create_file_if_not_exist()
{
    cd ${dir}
    if [ ! -f ${newfile} ]
    then
        touch ${newfile}
    fi
}

function edit_file()
{
    cd ${dir}
    vim ${file}
}

function show_file()
{
    cd ${dir}
    cat ${file}
}

function compile()
{
    cd ${dir}
    ${compiler} ${file}
}

function run()
{
    cd ${dir}
    if [ -f a.out ]
    then
        ./a.out
    fi
}

function link()
{
    ln -sfn "${dir}/${file}" "${HOME}/projects/playground.clion/main.cpp"
}

function commit()
{
    message=${1:-"Code on ${date}"}

    cd ${programmingdir}
    git status
    git stash save

    cd ${dir}
    tmp=${date}.txt
    rm -f ${tmp}
    echo ${message}     >> ${tmp}
    for (( i=0; i<${#message}; i++ ))
    do
        underline="${underline}-"
    done
    echo ${underline}   >> ${tmp}
    echo "\`\`\`C++"    >> ${tmp}
    cat ${file}         >> ${tmp}
    echo "\`\`\`"       >> ${tmp}
    echo ""             >> ${tmp}

    cd ${programmingdir}
    cat ${readmefile} >> ${dir}/${tmp}
    cp ${dir}/${tmp} ${readmefile}
    git add ${readmefile}
    git commit -m "programming: ${message} [C++]"
    git stash clear
    git status
}

function push()
{
    cd ${programmingdir}
    git status
    git push
    git status
}

function reset()
{
    cd ${programmingdir}
    git status
    git reset --hard HEAD^
    git status
}

function recover()
{
    cd ${programmingdir}
    git status
    git pull
    git status
}

function main()
{
    action="${1:-"-e"}"
    case ${action} in
    -h|--help)
        usage
        ;;
    -n|--new)
        create_file_if_not_exist
        ;;
    -e|--edit)
        edit_file
        ;;
    -s|--show)
        show_file
        ;;
    -g|--compile)
        compile
        ;;
    -r|--run)
        compile
        run
        ;;
    -l|--link)
        link
        ;;
    -c|--commit)
        commit "${2}"
        ;;
    -p|--push)
        push
        ;;
    --reset)
        reset
        ;;
    --recover)
        recover
        ;;
    esac
}

main "${@}"

